<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/fgx3"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="#cdcdcd" />
    <RelativeLayout
        android:id="@+id/address_view"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_below="@+id/fgx3"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/location_Img"
            android:src="@drawable/ic_location_on_24dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/address_hint"
            android:layout_centerVertical="true"
            android:text="请选择地址"
            android:textColor="@color/gray"
            android:layout_toEndOf="@+id/location_Img"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/arrow_right"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:src="@drawable/ic_chevron_right_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <com.xhb.jxnk25.maillineview.MailLineView
        android:id="@+id/fgx4"
        android:layout_below="@id/address_view"
        android:layout_width="wrap_content"
        android:layout_height="2.5dp" />
    <RelativeLayout
        android:id="@+id/getTime_View"
        android:layout_below="@id/fgx4"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:text="选择送达时间"/>
        <ImageView
            android:id="@+id/arrow_right2"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:src="@drawable/ic_chevron_right_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/selectTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/arrow_right2"
            android:textSize="14sp"
            android:text="尽快送达"/>
    </RelativeLayout>
    <View
        android:id="@+id/fgx5"
        android:layout_below="@id/getTime_View"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="#cdcdcd" />
    <RelativeLayout
        android:id="@+id/pay_way"
        android:layout_below="@id/fgx5"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="50dp">
        <TextView
            android:layout_marginLeft="15dp"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:text="支付方式"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/arrow_right3"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:src="@drawable/ic_chevron_right_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/pay_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/arrow_right3"
            android:textSize="14sp"
            android:text="在线支付"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/name_view"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/pay_way"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/column_settlement"
            android:layout_marginLeft="15dp"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:text="零食店"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:id="@+id/fgx8"
        android:layout_below="@id/name_view"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="#cdcdcd" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/select_RV"
        android:layout_below="@id/fgx8"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <RelativeLayout
        android:id="@+id/psf_view"
        android:layout_below="@+id/select_RV"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_marginLeft="15dp"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:text="配送费"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/psf_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥0"
            android:textColor="@color/result_view"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/preferential_view"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_below="@+id/psf_view"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_marginLeft="15dp"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:text="优惠卷"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/arrow_right4"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:src="@drawable/ic_chevron_right_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/preferential"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/arrow_right4"
            android:textSize="14sp"
            android:text="输入优惠码"/>
    </RelativeLayout>
    <View
        android:id="@+id/fgx6"
        android:layout_below="@id/preferential_view"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="#cdcdcd" />

    <RelativeLayout
        android:id="@+id/note_view"
        android:background="@color/white"
        android:layout_below="@+id/fgx6"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_marginLeft="15dp"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:text="备注"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/arrow_right5"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:src="@drawable/ic_chevron_right_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/note"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/arrow_right5"
            android:ellipsize="end"
            android:textSize="14sp"
            android:text="输入备注"
            android:singleLine="true" />
    </RelativeLayout>

    <View
        android:layout_below="@id/note_view"
        android:background="@color/bg_color"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
</RelativeLayout>