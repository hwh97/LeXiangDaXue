<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/testpic"
        android:id="@+id/product_pic"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="双汇 香辣香脆肠 35g/包"
        android:id="@+id/product_name"
        android:layout_alignTop="@+id/product_pic"
        android:layout_toEndOf="@+id/product_pic"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="30dp"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:textColor="@color/tomato"
        android:id="@+id/product_price"
        android:layout_alignBottom="@+id/product_pic"
        android:layout_alignStart="@+id/product_name"
        android:textSize="16dp" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addButton"
        android:layout_marginEnd="16dp"
        android:background="@null"
        android:src="@drawable/ic_add_circle_24dp"
        android:layout_alignBottom="@+id/product_price"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/count"
        android:layout_marginBottom="4dp"
        android:id="@+id/product_count"
        android:visibility="invisible"
        android:textColor="@color/black"
        android:layout_alignBottom="@+id/addButton"
        android:layout_marginEnd="4dp"
        android:layout_toStartOf="@+id/addButton"
        android:textSize="14sp"
        android:gravity="center_vertical|center_horizontal" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/removeButton"
        android:background="@null"
        android:src="@drawable/ic_remove_circle_24dp"
        android:layout_toLeftOf="@+id/addButton"
        android:layout_marginEnd="4dp"
        android:layout_above="@+id/view"
        android:visibility="invisible"
        android:layout_toStartOf="@+id/product_count" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="90dp"
        android:layout_below="@+id/product_pic"
        android:background="#000000"
        android:id="@+id/view" />

</RelativeLayout>
