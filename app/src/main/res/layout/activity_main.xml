<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <cn.hwwwwh.lexiangdaxue.other.MyViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <!--上横线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_above="@+id/ll"
        android:background="#50000000" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="#ffffff">

        <RadioButton
            android:id="@+id/main_tab_home"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/menu_bg"
            android:button="@null"
            android:paddingTop="5dp"
            android:text="首页"
            android:textColor="@color/darkorange"
            android:drawableTop="@drawable/ic_home149"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:checked="true"
            android:gravity="center" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#000000" />

        <RadioButton
            android:id="@+id/main_tab_catagory"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:paddingTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/menu_bg"
            android:button="@null"
            android:textColor="@color/darkgray"
            android:gravity="center"
            android:text="发现"
            android:textSize="12sp"
            android:drawableTop="@drawable/ic_find_gray"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#000000" />

        <RadioButton
            android:id="@+id/main_tab_third"
            android:layout_width="0dp"
            android:paddingTop="5dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/menu_bg"
            android:button="@null"
            android:text="订单"
            android:textSize="12sp"
            android:textColor="@color/darkgray"
            android:drawableTop="@drawable/ic_shopping_basket_24px_gray"
            android:gravity="center" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#000000" />

        <RadioButton
            android:id="@+id/main_tab_car"
            android:layout_width="0dp"
            android:paddingTop="7dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/menu_bg"
            android:button="@null"
            android:gravity="center"
            android:text="我的"
            android:textColor="@color/darkgray"
            android:textSize="12sp"
            android:drawableTop="@drawable/ic_pople_gray"/>

    </LinearLayout>
</RelativeLayout>