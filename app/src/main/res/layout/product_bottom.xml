<?xml version="1.0" encoding="utf-8"?>
<com.flipboard.bottomsheet.BottomSheetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/darkgray"
            android:id="@+id/money"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            android:onClick="onClick"
            android:text="￥"/>
        <TextView
            android:id="@+id/totalPrice"
            android:layout_toEndOf="@+id/money"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:textSize="24sp"
            android:textColor="@color/darkgray"
            android:layout_marginTop="9dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="|"
            android:id="@+id/shuxian"
            android:textColor="@color/darkgray"
            android:layout_marginLeft="3dp"
            android:onClick="onClick"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@+id/totalPrice" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select_text"
            android:text="已选择"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="17dp"
            android:onClick="onClick"
            android:layout_toEndOf="@+id/shuxian" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/select_hint"
            android:layout_marginTop="17dp"
            android:onClick="onClick"
            android:layout_toEndOf="@+id/select_text"
            />
        <TextView
            android:id="@+id/select_hint2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@+id/select_hint"
            android:onClick="onClick"
            android:text="份"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4元起送"
            android:id="@+id/textView5"
            android:layout_marginTop="14dp"
            android:textColor="@color/darkgray"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:layout_alignParentStart="false"
            android:textSize="16sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@color/darkorange"
            android:text="结算"
            android:visibility="invisible"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:id="@+id/button2"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</com.flipboard.bottomsheet.BottomSheetLayout>