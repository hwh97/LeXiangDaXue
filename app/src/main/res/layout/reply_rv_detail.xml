<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <cn.hwwwwh.lexiangdaxue.other.XCRoundImageView
            android:src="@drawable/headpic"
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/post_admin"
            android:layout_marginStart="10dp"
            android:text="用户名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/post_createtime"
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            android:text="刚刚"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL_zan"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="0"
                android:id="@+id/good_count"
                android:layout_marginEnd="5dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="17dp" />

            <com.ldoublem.thumbUplib.ThumbUpView
                android:id="@+id/zan"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="1dp"
                android:layout_width="17dp"
                app:cracksColor="#33475f"
                app:edgeColor="#9d55b8"
                app:fillColor="#ea8010"
                app:unlikeType="1"
                android:layout_height="17dp"/>

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/post_content"
        android:textIsSelectable="true"
        android:textColor="@color/black"
        android:text="1111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/pt_fgx"
        android:layout_width="match_parent"
        android:layout_below="@+id/Post_content"
        android:layout_marginTop="5dp"
        android:layout_height="0.4dp"
        android:background="#cdcdcd" />
</LinearLayout>