<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/whitesmoke"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/register_toolbar"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </android.support.v7.widget.Toolbar>

    <cn.hwwwwh.lexiangdaxue.other.XCRoundImageView
        android:id="@+id/headPic"
        android:layout_below="@+id/register_toolbar"
        android:src="@drawable/headpic"
        android:background="@drawable/conner_headpic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <RelativeLayout
        android:layout_below="@+id/headPic"
        android:id="@+id/zhanhao"
        android:background="@color/white"
        android:padding="8dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/relativeLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:id="@+id/textView"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="true" />
        </RelativeLayout>
        <EditText
            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="账号名"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#222222"
            android:textColorHint="#999999"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/relativeLayout"
            android:textSize="15dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/shuru2"
        android:background="@color/white"
        android:layout_below="@id/zhanhao"
        android:padding="8dp"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/relativeLayout2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮箱"
                android:id="@+id/textView2"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:layout_alignParentStart="false"/>
        </RelativeLayout>
        <EditText
            android:id="@+id/email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="邮箱"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#222222"
            android:textColorHint="#999999"
            android:layout_alignTop="@+id/relativeLayout2"
            android:layout_toEndOf="@+id/relativeLayout2"
            android:textSize="15dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/shuru3"
        android:background="@color/white"
        android:layout_below="@id/shuru2"
        android:padding="8dp"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/relativeLayout3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码"
                android:id="@+id/textView3"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:layout_alignParentStart="false"/>
        </RelativeLayout>
        <EditText
            android:id="@+id/password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="密码"
            android:inputType="textPassword"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#222222"
            android:textColorHint="#999999"
            android:layout_alignTop="@+id/relativeLayout3"
            android:layout_toEndOf="@+id/relativeLayout3"
            android:textSize="15dp" />
    </RelativeLayout>
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/royalblue"
        android:text="注册"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/shuru3"
        android:layout_marginTop="28dp"
        android:layout_alignStart="@+id/shuru2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已经注册？返回登录"
        android:textColor="@color/royalblue"
        android:id="@+id/btnLinkToLoginScreen"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/btnRegister"
        android:layout_centerHorizontal="true" />


</RelativeLayout>