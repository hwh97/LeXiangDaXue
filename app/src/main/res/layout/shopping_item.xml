<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/shopping_pic"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:scaleType="fitXY" />
    <ImageView
        android:layout_below="@+id/shopping_pic"
        android:id="@+id/biaozhi"
        android:src="@drawable/taobao"
        android:layout_marginStart="1dp"
        android:layout_width="15dp"
        android:layout_height="17dp" />
    <TextView
        android:id="@+id/D_title"
        android:layout_toEndOf="@id/biaozhi"
        android:text="苏泊尔保温杯 男女士304不锈钢真空水杯学生直身便携大容量茶杯子"
        android:layout_below="@+id/shopping_pic"
        android:maxLines="1"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:textSize="14sp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:allowUndo="false" />

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_marginTop="10dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:layout_below="@+id/D_title"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/Quan_price"
            android:text="10元购物券"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:background="@drawable/conner_shopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/Sales_num"
            android:layout_alignParentEnd="true"
            android:text="月销 40"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/layout1"
        android:layout_marginTop="2dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingBottom="2dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/Org_Price"
            android:text="￥49"
            android:textColor="@color/darkgray"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/Price"
            android:layout_alignParentStart="true"
            android:text="￥39"
            android:textColor="@color/red"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</RelativeLayout>