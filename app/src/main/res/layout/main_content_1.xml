<LinearLayout
    android:orientation="horizontal"
    android:layout_marginTop="8dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/home_quan"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/taobaored"
            android:textSize="15sp"
            android:text="领卷购最新更新"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/home_quan_text"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="13sp"
            android:textColor="@color/gray"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <FrameLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/sy_quan_img"
                android:scaleType="fitXY"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/sy_quan_text"
                android:text="券后价300元"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="11sp"
                android:background="@drawable/conner_webview"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="48dp"
                android:layout_height="48dp" />
        </FrameLayout>
    </LinearLayout>

    <View
        android:background="@color/darkgray"
        android:layout_width="0.1dp"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="4"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/home_right_1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="营养早餐"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/orange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="我的大学我的早餐"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageView
                android:src="@drawable/shoye_right_1"
                android:layout_width="60dp"
                android:layout_marginEnd="6dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/darkgray"/>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="精彩活动"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/mediumturquoise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="更多活动敬请期待"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageView
                android:src="@drawable/shoye_right_2"
                android:layout_width="60dp"
                android:layout_marginEnd="6dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>